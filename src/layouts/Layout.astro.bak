---
import { ClientRouter } from 'astro:transitions';

interface Props {
  title: string;
  pageClass?: string; // Nueva prop opcional
}

const { title, pageClass } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ClientRouter />
  </head>
  <body class={pageClass ? pageClass : ''}>
    <div class="layout-body">
      <!-- Contenedor principal -->
      <main class="w-full mx-auto px-4 sm:px-6 lg:px-12 prose prose-invert max-w-full md:max-w-4xl lg:max-w-5xl">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  @reference "../styles/global.css"
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    
    html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        color: #fff;
    }
    body {
      @apply grid place-content-center px-5 py-20;
    }
    body > div {
      @apply container;
    }

    body.writeup-page {
      @apply m-0 pt-4 px-0 sm:px-5 md:px-5 lg:px-10 pb-20;
    }
</style>

